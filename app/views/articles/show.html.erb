<h1><%= @article.title %></h1>

<p><%= @article.text %></p>

<%= form_for([@article, @article.comments.build]) do |f| %>
 


<h2>Comments</h2>
<% @article.comments.each do |comment| %>
  <p>
    <b>Commenter:</b>
    <%= comment.author %>
  </p>
 
  <p>
    <b>Comment:</b>
    <%= comment.body %>
  </p>
  <hr>
<% end %>



 <p>
 <%= f.label :author %><br>
 </p>
    <p>  <%= f.text_field :author %></p>
  
 <p> <%= f.label :body %><br></p>
